{
    "trainer_class":"GDCTrainer",
    "lm_name": "mkhalifa/gpt2-biographies",
    "ref_lm_name": "mkhalifa/gpt2-biographies",
    "tk_name": "gpt2",
    "scorers":[
        {"name": "science", "config":{"scorer_type": "wikibio-wordlist", "scorer_attribute": "science"}},
        {"name": "art", "config":{"scorer_type": "wikibio-wordlist", "scorer_attribute": "art"}},
        {"name": "sports", "config":{"scorer_type": "wikibio-wordlist", "scorer_attribute": "sports"}},
        {"name": "business", "config":{"scorer_type": "wikibio-wordlist", "scorer_attribute": "business"}}

    ],
    "desired_moments": {"science":0.4, "art":0.4, "business":0.10, "sports":0.10},
    "dropout":0.1,
    "seed": 12,
    "steps": 8400000,
    "batch_size": 2048,
    "forward_batch_size": 64,
    "discriminator_forward_batch_size": 32,
    "minibatch_epochs": 1,
    "moment_matching_sample_size":10240,
    "txt_in_len": 1,
    "txt_out_len": 40,
    "lr": 1.41e-5,
    "warmup_steps": 0,
    "scheduler": "constant",
    "prefix":null,
    "eval_top_p": 0.9,
    "q_update_interval": 10,
    "max_grad_norm": null,
    "q_update_criterion":"kld",
    "eval_interval": 10,
    "eval": true,
    "save_checkpoint_every":50,
    "resume_if_ckpt_exists": false,
    "save_dir":"../saved_models/",
    "WANDB": false,
    "WANDB_PROJECT_NAME": "%%REPLACE THIS WITH YOUR W&B TOKEN & SET WANDB=True) %%",
    "NEPTUNE": false,
    "NEPTUNE_API_TOKEN": "%%REPLACE THIS WITH YOUR NEPTUNE TOKEN & SET NEPTUNE=True) %%",
    "NEPTUNE_PROJECT_NAME": "%%REPLACE THIS WITH Neptune Project Name & SET NEPTUNE=True) %%",
    "WANDB_NEPTUNE_NAME":"Name of the job that appears in Neptune or WANDB",
    "WANDB_NEPTUNE_DESC":"Desc. of the job that appears in Neptune or WANDB",
    "WANDB_NEPTUNE_TAGS": ["GDC","multiple-distributional"]

}
